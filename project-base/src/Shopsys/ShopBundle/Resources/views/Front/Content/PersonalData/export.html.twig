{% extends '@ShopsysShop/Front/Layout/layoutWithoutPanel.html.twig' %}

{% block title %}
    {{ 'Personal information overview'|trans }}
{% endblock %}

{% block meta_description %}
    {{ parent() }}
{% endblock %}

{% block meta_robots -%}
    <meta name="robots" content="noindex">
{% endblock %}

{% block main_content %}
<div class="in-user-text">
    <h1>{{ 'Export customer data'|trans }}</h1>
    {% if user is null and newslettersubscriber is null and orders == 0 %}
        <h2>{{ 'No personal data for this email address'|trans }}</h2>
    {% else %}
    <div class="padding-20">
       <div class="btn btn--medium btn--primary">{{ 'Export data to xml'|trans }}</div>
    </div>
    {% endif %}
</div>
{% endblock %}